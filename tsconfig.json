{
  "compilerOptions": {
    "target": "es2021",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "tests"
  ],
  "include": [
    "**/*.ts"
  ]
}
