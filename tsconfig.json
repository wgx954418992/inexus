{
  "compilerOptions": {
    "target": "es2021",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
//    "experimentalDecorators": true,
//    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "**/*.ts"
  ]
}
